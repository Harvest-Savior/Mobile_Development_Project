<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Harvest_Savior_MobileDev" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green1</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
    </style>

    <style name="Theme.Harvest_Savior_MobileDev" parent="Base.Theme.Harvest_Savior_MobileDev" />

    <style name="PlaceholderStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray500</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomToolbarStyleTitle" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:fontFamily">@font/abelregular</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CustomCardViewTindakan" parent="@style/Widget.Material3.CardView.Filled">
        <item name="backgroundTint">@color/red2</item>
        <item name="android:strokeAlpha">0</item>
    </style>

    <style name="CustomCardViewNamaToko" parent="@style/Widget.Material3.CardView.Filled">
        <item name="backgroundTint">@color/green2</item>
        <item name="android:strokeAlpha">0</item>
    </style>

    <style name="CustomFloatButtonCallToko" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/green1</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:padding">10dp</item>
        <item name="iconTint">@color/white</item>
        <item name="android:strokeAlpha">0</item>
    </style>
</resources>