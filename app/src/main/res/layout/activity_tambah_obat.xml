<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".lib.penjual.tambah_obat_activity.view.TambahObatActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tambah_produk_obat"
        android:fontFamily="@font/abelregular"
        android:textSize="24sp"
        android:textColor="@color/gray700"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@id/btn_back"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_produk"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/scan2"
        android:padding="60dp"
        android:background="@drawable/stroke_image_add_produk"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_namaObat_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nama_obat"
        android:textSize="18sp"
        android:textColor="@color/gray700"
        android:fontFamily="@font/abelregular"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/iv_produk"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tl_namaObat_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_namaObat_add"
        app:layout_constraintStart_toStartOf="parent"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:placeholderText="Fungisida"
        app:boxStrokeColor="@color/gray400"
        app:placeholderTextAppearance="@style/PlaceholderStyle"
        app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_namaObat_add"
            android:layout_width="match_parent"
            android:inputType="text"
            android:hint="@string/hint_nama_obat"
            android:textColor="@color/gray500"
            android:fontFamily="@font/interregular"
            android:textSize="18sp"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_deskripsiObat_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deskripsi_obat"
        android:textSize="18sp"
        android:textColor="@color/gray700"
        android:fontFamily="@font/abelregular"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tl_namaObat_add"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tl_deskripsiObat_add"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintTop_toBottomOf="@id/tv_deskripsiObat_add"
        app:layout_constraintStart_toStartOf="parent"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:placeholderText="Untuk mengendalikan penyakit, seperti NOPATEK dan Sidazeb"
        app:boxStrokeColor="@color/gray400"
        app:placeholderTextAppearance="@style/PlaceholderStyle"
        app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_deskripsiObat_add"
            android:layout_width="match_parent"
            android:inputType="textMultiLine"
            android:hint="@string/untuk_mengendalikan_penyakit_seperti_nopatek_dan_sidazeb"
            android:textColor="@color/gray500"
            android:fontFamily="@font/interregular"
            android:textSize="18sp"
            android:gravity="top|start"
            android:scrollbars="vertical"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_stok_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stok"
        android:textSize="18sp"
        android:textColor="@color/gray700"
        android:fontFamily="@font/abelregular"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tl_deskripsiObat_add"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tl_stok_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_stok_add"
        app:layout_constraintStart_toStartOf="parent"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:placeholderText="4"
        app:boxStrokeColor="@color/gray400"
        app:placeholderTextAppearance="@style/PlaceholderStyle"
        app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_stok_add"
            android:layout_width="match_parent"
            android:inputType="number"
            android:hint="@string/stok"
            android:textColor="@color/gray500"
            android:fontFamily="@font/interregular"
            android:textSize="18sp"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_hargaObat_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_hargaObat"
        android:textSize="18sp"
        android:textColor="@color/gray700"
        android:fontFamily="@font/abelregular"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tl_stok_add"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tl_hargaObat_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_hargaObat_add"
        app:layout_constraintStart_toStartOf="parent"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:placeholderText="Rp10.000"
        app:boxStrokeColor="@color/gray400"
        app:placeholderTextAppearance="@style/PlaceholderStyle"
        app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_hargaObat_add"
            android:layout_width="match_parent"
            android:inputType="number"
            android:hint="@string/harga_obat"
            android:textColor="@color/gray500"
            android:fontFamily="@font/interregular"
            android:textSize="18sp"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_tambah_obat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tl_hargaObat_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/tambah_obat"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        android:padding="15dp"
        android:fontFamily="@font/abelregular"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>