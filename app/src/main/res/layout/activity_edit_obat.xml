<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lib.penjual.edit_obat_activity.view.EditObatActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_produk_obat"
            android:fontFamily="@font/abelregular"
            android:textSize="24sp"
            android:textColor="@color/gray700"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@id/btn_back"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_produk"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/scan2"
            android:padding="60dp"
            android:background="@drawable/stroke_image_add_produk"
            app:layout_constraintTop_toBottomOf="@id/btn_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <Button
            android:id="@+id/btnChangeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ubah_gambar"
            android:fontFamily="@font/abelregular"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/iv_produk"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnOpenGallery"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/btnOpenGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buka_galeri"
            android:fontFamily="@font/abelregular"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/iv_produk"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnChangeImage"
            android:layout_marginTop="10dp"
            />




        <TextView
            android:id="@+id/tv_namaObat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nama_obat"
            android:textSize="18sp"
            android:textColor="@color/gray700"
            android:fontFamily="@font/abelregular"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/btnOpenGallery"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tl_namaObat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_namaObat"
            app:layout_constraintStart_toStartOf="parent"
            app:boxCornerRadiusTopStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:placeholderText="Fungisida"
            app:boxStrokeColor="@color/gray400"
            app:placeholderTextAppearance="@style/PlaceholderStyle"
            app:layout_constraintEnd_toEndOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_namaObat"
                android:layout_width="match_parent"
                android:inputType="text"
                android:hint="@string/hint_nama_obat"
                android:textColor="@color/gray500"
                android:fontFamily="@font/interregular"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_deskripsiObat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deskripsi_obat"
            android:textSize="18sp"
            android:textColor="@color/gray700"
            android:fontFamily="@font/abelregular"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tl_namaObat"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tl_deskripsiObat"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:layout_constraintTop_toBottomOf="@id/tv_deskripsiObat"
            app:layout_constraintStart_toStartOf="parent"
            app:boxCornerRadiusTopStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:placeholderText="Untuk mengendalikan penyakit, seperti NOPATEK dan Sidazeb"
            app:boxStrokeColor="@color/gray400"
            app:placeholderTextAppearance="@style/PlaceholderStyle"
            app:layout_constraintEnd_toEndOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_deskripsiObat"
                android:layout_width="match_parent"
                android:inputType="textMultiLine"
                android:hint="@string/untuk_mengendalikan_penyakit_seperti_nopatek_dan_sidazeb"
                android:textColor="@color/gray500"
                android:fontFamily="@font/interregular"
                android:textSize="18sp"
                android:gravity="top|start"
                android:scrollbars="vertical"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_penyakit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/obat_untuk_penyakit"
            android:textSize="18sp"
            android:textColor="@color/gray700"
            android:fontFamily="@font/abelregular"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tl_deskripsiObat"
            app:layout_constraintStart_toStartOf="parent"
            />

        <Spinner
            android:id="@+id/spinner_penyakitEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_penyakit_title"
            tools:ignore="TouchTargetSizeCheck" />


        <androidx.cardview.widget.CardView
            android:id="@+id/card_selected_penyakit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="@color/green1"
            app:layout_constraintTop_toBottomOf="@id/spinner_penyakitEdit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_selected_penyakitEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/penyakit_yang_dipilih_akan_muncul_di_sini"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/abelregular"
                android:padding="16dp"
                android:textColor="@color/white"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_stok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stok"
            android:textSize="18sp"
            android:textColor="@color/gray700"
            android:fontFamily="@font/abelregular"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/card_selected_penyakit"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tl_stok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_stok"
            app:layout_constraintStart_toStartOf="parent"
            app:boxCornerRadiusTopStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:placeholderText="4"
            app:boxStrokeColor="@color/gray400"
            app:placeholderTextAppearance="@style/PlaceholderStyle"
            app:layout_constraintEnd_toEndOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_stok"
                android:layout_width="match_parent"
                android:inputType="number"
                android:hint="@string/stok"
                android:textColor="@color/gray500"
                android:fontFamily="@font/interregular"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_hargaObat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_hargaObat"
            android:textSize="18sp"
            android:textColor="@color/gray700"
            android:fontFamily="@font/abelregular"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tl_stok"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tl_hargaObat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_hargaObat"
            app:layout_constraintStart_toStartOf="parent"
            app:boxCornerRadiusTopStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:placeholderText="Rp10.000"
            app:boxStrokeColor="@color/gray400"
            app:placeholderTextAppearance="@style/PlaceholderStyle"
            app:layout_constraintEnd_toEndOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_hargaObat"
                android:layout_width="match_parent"
                android:inputType="number"
                android:hint="@string/harga_obat"
                android:textColor="@color/gray500"
                android:fontFamily="@font/interregular"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_linkProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Link E-Commerce Produk"
            android:textSize="18sp"
            android:textColor="@color/gray700"
            android:fontFamily="@font/abelregular"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tl_hargaObat"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tl_linkProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_linkProduct"
            app:layout_constraintStart_toStartOf="parent"
            app:boxCornerRadiusTopStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:placeholderText="E-Commerce"
            app:boxStrokeColor="@color/gray400"
            app:placeholderTextAppearance="@style/PlaceholderStyle"
            app:layout_constraintEnd_toEndOf="parent">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_linkProduct"
                android:layout_width="match_parent"
                android:inputType="textUri"
                android:hint="@string/link_e_commerce_jika_ada"
                android:textColor="@color/gray500"
                android:fontFamily="@font/interregular"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_simpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tl_linkProduct"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/simpan"
            android:textSize="18sp"
            android:layout_marginTop="40dp"
            android:padding="15dp"
            android:fontFamily="@font/abelregular"
            android:textColor="@color/white"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>